<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <style>
        table {
            background-color: lemonchiffon;
            border-bottom-color: darkslategray;
        }
        body {
            font-family: "Times New Roman", Georgia, Serif;
            background-color: antiquewhite;
        }

        #a {
            background-color: antiquewhite;
        }

        h1, h2, h3, h4, h5, h6 {
            font-family: "Playfair Display";
            letter-spacing: 5px;
            background-color: antiquewhite;
        }

        .image:hover {
            opacity: 0.2;
        }
    </style>

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Home", "Index", "Admin", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Category", "Index", "CategoryLists", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Product", "Index", "ProductLists", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("User-Admin-Manager", "Index", "User", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Stock-Record", "RecIndex", "ProductLists", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Orders", "Index", "Orders", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Logout", "Logout", "Admin", new { area = "" }, new { @class = "navbar-brand" })


            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    @RenderSection("Scripts", false)
</body>
</html>