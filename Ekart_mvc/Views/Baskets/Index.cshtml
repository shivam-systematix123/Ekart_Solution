@model IEnumerable<Ekart_mvc.Models.order.ProductList>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Prod.cshtml";

}
<h2>Index</h2>

<p>
   Items
</p>
<table class="table">
  
   
    @foreach (var item in Model)
    {
        <tr>

        <td>
            <img class="img-responsive" style="height:50px" src="~/Content/ProductImages/@item.Image1" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryList.CategoryName)
        </td>
        <td>
            <a href="@Url.Action("AddToBasket", "BasketItems", new { Id =item.ProductId })" class="btn btn-default">Add to Basket</a>
            @*  @Html.ActionLink("Details", "Details", new { id = item.ProductId }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.ProductId })*@
        </td>

        </tr>
    }


</table>
